         #       inactive_workspace #171717 #444444 #B1D4E0
          #      urgent_workspace #145DA0 #B1D4E0 #FFFFFF
    #}
}


# *************
# * AUTOSTART *
# *************

exec_always ~/.scritps/pastart.sh
exec_always nitrogen --restore
#exec_always --no-startup-id $HOME/.config/polybar/launch.sh
bindsym --release $mod+p exec passmenu
for_window [class=".*"] border pixel 1

# ************
# * KEYBINDS *
# ************

bindsym $mod+Shift+b exec systemctl reboot
bindsym $mod+Shift+z exec shutdown now
bindsym $mod+e exec emacs

